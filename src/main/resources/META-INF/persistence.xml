<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             version="1.0">
    <persistence-unit name="tycoonPU">
        <class>be.projecttycoon.model.Team</class>
        <class>be.projecttycoon.model.Game</class>

        <properties>
            <property name="toplink.jdbc.driver" value="org.hsqldb.jdbcDriver" />
            <property name="toplink.jdbc.url" value="jdbc:hsqldb:mem:tycoondb" />
            <property name="toplink.jdbc.user" value="sa" />
            <property name="toplink.jdbc.password" value="" />
        </properties>
    </persistence-unit>
</persistence>